[user]
	email = gtonky@gmail.com
	name = Igor Tonky
[color]
    ui = auto
    # branch = auto
    # diff = auto
	interactive = auto
    # status = auto
[core]
	editor = vim
[alias]
    a = add
    aa = add .
    au = add -u
	b = branch
	br = branch -r
	c = commit
	cm = commit -m
	ca = commit -a -m
	co = checkout
    d = diff
    dh = diff HEAD
    ds = diff --staged
    h = help
    mnf = merge --no-ff
    l = log --graph --raw -n 200
    la = log --graph --raw
    pa = push --all
	s = status
    r = rebase

[branch "*"]
	mergeoptions = --no-ff

[branch "master"]
    remote = origin
    merge = refs/heads/master
[push]
	default = simple
